{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "dom"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.tsx"]
}
